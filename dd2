  // ---- SUMMARY LOG: build the strings the logger expects ----
            // what the user saw (prompt list)
            var promptItems = (membersFound ?? new List<Member>())
                .Select(m => $"{m.FullName} | {m.AccountNumber}")
                .ToList();

            // what the user selected
            var selectionText = selectedAccessNumByUser is null
                ? "(none)"
                : $"{selectedAccessNumByUser.FullName} | {selectedAccessNumByUser.AccountNumber}";

            // system responses (any messages you want to keep)
            var systemMessages = new[]
            {
                "Access number accepted",
                "Search will beginâ€¦"
            };

            AppLogger.Summary.Add(
                promptItems: promptItems,
                selection: selectionText,
                systemResponses: systemMessages);

            await GetMemberProfile.RetrieveMembersProfile(selectedAccessNumByUser, envir);
        }
        else
        {
            Console.WriteLine($"Failed to retrieve member data: {response?.ErrorMessage}");
            AppLogger.Summary.Add(
                promptItems: new[] { $"Env: {envir}", $"Access#: {AccessNumber}" },
                selection: "No member selected",
                systemResponses: new[] { $"Error: {response?.ErrorMessage ?? "Unknown"}" });
        }
    }
    catch (Exception ex)
    {
