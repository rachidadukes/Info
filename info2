public partial class MainWindow : Window
{
    public class MonthYearItem
    {
        public int Month { get; set; }
        public int Year  { get; set; }
        public string DisplayText => $"{new DateTime(Year, Month, 1):MMM} . {Year}";
    }

    public MainWindow()
    {
        InitializeComponent();
        LoadMonthYearData();
    }

    private void LoadMonthYearData()
    {
        var items = new List<MonthYearItem>();

        int startYear = 2020;               // pick your earliest year
        int endYear   = DateTime.Now.Year;  // up to current year

        for (int y = startYear; y <= endYear; y++)
            for (int m = 1; m <= 12; m++)
                items.Add(new MonthYearItem { Year = y, Month = m });

        // Newest first: current year/month at top
        var sorted = items.OrderByDescending(i => i.Year)
                          .ThenByDescending(i => i.Month)
                          .ToList();

        MonthYearComboBox.ItemsSource = sorted;

        // Preselect current month/year
        var current = sorted.FirstOrDefault(i => i.Year == DateTime.Now.Year &&
                                                 i.Month == DateTime.Now.Month);
        MonthYearComboBox.SelectedItem = current;
    }

    private void MonthYearComboBox_SelectionChanged(object sender, SelectionChangedEventArgs e)
    {
        if (MonthYearComboBox.SelectedItem is MonthYearItem sel)
        {
            int year  = sel.Year;
            int month = sel.Month;
            // use year/month here (e.g., LoadLogs(year, month))
        }
    }
}
