
public static CreditAddRequestXmlModel DeserializeXml(string rawXml)
{
    string cleanedXml = CleanXml(rawXml, "CreditAddRq");

    var serializer = new XmlSerializer(typeof(CreditAddRequestXmlModel));

    using var reader = new StringReader(cleanedXml);
    return (CreditAddRequestXmlModel)serializer.Deserialize(reader);
}

===============================
public static string CleanXml(string xml, string rootTag = "CreditAddRq")
{
    if (string.IsNullOrWhiteSpace(xml))
        return string.Empty;

    var idx = xml.IndexOf($"<{rootTag}", StringComparison.OrdinalIgnoreCase);
    return idx >= 0 ? xml.Substring(idx).Trim() : xml.Trim();
}
=======================
string rawXmlFromLog = GetRawXmlSomehow(); // From SQL, log file, etc.
var xmlModel = DeserializeXml(rawXmlFromLog);

// Now use fields like:
string rqId = xmlModel.MsgRqHdr?.RqUID;
decimal cashIn = xmlModel.CreditInfo?.CashInAmt?.Amt ?? 0;
