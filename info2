
XmlComparer.CompareLineByLine("original.xml", "generated.xml");



=======================================================

using System;
using System.IO;

class XmlComparer
{
    public static void CompareLineByLine(string originalPath, string generatedPath)
    {
        var originalLines = File.ReadAllLines(originalPath);
        var generatedLines = File.ReadAllLines(generatedPath);

        int lineCount = Math.Max(originalLines.Length, generatedLines.Length);

        for (int i = 0; i < lineCount; i++)
        {
            string originalLine = i < originalLines.Length ? originalLines[i].Trim() : "[Missing]";
            string generatedLine = i < generatedLines.Length ? generatedLines[i].Trim() : "[Missing]";

            if (!string.Equals(originalLine, generatedLine, StringComparison.OrdinalIgnoreCase))
            {
                Console.WriteLine($"❌ Difference at line {i + 1}:");
                Console.WriteLine($"Original : {originalLine}");
                Console.WriteLine($"Generated: {generatedLine}");
                return;
            }
        }

        Console.WriteLine("✅ The two XML requests are identical (line-by-line).");
    }
}
