

===============================
<ComboBox x:Name="MonthYearComboBox"
          Width="150"
          SelectionChanged="MonthYearComboBox_SelectionChanged"
          Margin="5">
    <ComboBox.ItemTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding MonthName}" Width="80"/>
                <TextBlock Text="{Binding Year}" Width="60" HorizontalAlignment="Right"/>
            </StackPanel>
        </DataTemplate>
    </ComboBox.ItemTemplate>
</ComboBox>
===============================

public partial class MainWindow : Window
{
    public class MonthYearItem
    {
        public string MonthName { get; set; }
        public int Month { get; set; }
        public int Year { get; set; }
        public string DisplayText => $"{MonthName} {Year}";
    }

    public MainWindow()
    {
        InitializeComponent();
        LoadMonthYearData();
    }

    private void LoadMonthYearData()
    {
        var items = new List<MonthYearItem>();
        int startYear = 2020;
        int endYear = 2030;

        for (int year = startYear; year <= endYear; year++)
        {
            for (int month = 1; month <= 12; month++)
            {
                items.Add(new MonthYearItem
                {
                    Month = month,
                    Year = year,
                    MonthName = new DateTime(year, month, 1).ToString("MMM")
                });
            }
        }

        MonthYearComboBox.ItemsSource = items.OrderByDescending(i => i.Year)
                                             .ThenByDescending(i => i.Month)
                                             .ToList();
    }

    private void MonthYearComboBox_SelectionChanged(object sender, SelectionChangedEventArgs e)
    {
        if (MonthYearComboBox.SelectedItem is MonthYearItem selected)
        {
            int selectedYear = selected.Year;
            int selectedMonth = selected.Month;

            MessageBox.Show($"Selected: {selected.MonthName} {selected.Year}");
            // Example: call your filtering method here
            // LoadLogs(selectedYear, selectedMonth);
        }
    }
}
