using System;

public class XmlComparer
{
    public static void CompareXmlStrings(string originalXml, string generatedXml)
    {
        var originalLines = originalXml.Split(new[] { "\r\n", "\n" }, StringSplitOptions.None);
        var generatedLines = generatedXml.Split(new[] { "\r\n", "\n" }, StringSplitOptions.None);

        int lineCount = Math.Max(originalLines.Length, generatedLines.Length);

        for (int i = 0; i < lineCount; i++)
        {
            string originalLine = i < originalLines.Length ? originalLines[i].Trim() : "[Missing]";
            string generatedLine = i < generatedLines.Length ? generatedLines[i].Trim() : "[Missing]";

            if (!string.Equals(originalLine, generatedLine, StringComparison.Ordinal))
            {
                Console.WriteLine($"❌ Difference at line {i + 1}:");
                Console.WriteLine($"Original : {originalLine}");
                Console.WriteLine($"Generated: {generatedLine}");
                return;
            }
        }

        Console.WriteLine("✅ The two XML strings are identical (line-by-line).");
    }
}
