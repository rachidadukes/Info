[XmlRoot("Status")]
public class StatusModel
{
    public string? Severity { get; set; }
    public string? StatusCode { get; set; }
    public string? StatusDesc { get; set; }
}

public static StatusModel? ParseStatus(string xml)
{
    var serializer = new XmlSerializer(typeof(StatusModel));
    using var reader = new StringReader(xml);
    return (StatusModel?)serializer.Deserialize(reader);
}
