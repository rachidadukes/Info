private void LoadMonthYearData()
{
    var items = new List<MonthYearItem>();

    DateTime now = DateTime.Now;
    int startYear = 2020;
    int endYear = now.Year;

    // Fill list only up to current month/year
    for (int year = endYear; year >= startYear; year--)
    {
        for (int month = 12; month >= 1; month--)
        {
            // stop once we pass the current month/year
            if (year == endYear && month > now.Month)
                continue;

            items.Add(new MonthYearItem
            {
                Year = year,
                Month = month,
                // Example: "Oct . 2025"
                DisplayText = $"{new DateTime(year, month, 1):MMM} . {year}"
            });
        }
    }

    // ✅ Now items[0] = current month/year
    MonthYearComboBox.ItemsSource = items;

    // ✅ Preselect current month/year
    var current = items.FirstOrDefault(i => i.Year == now.Year && i.Month == now.Month);
    MonthYearComboBox.SelectedItem = current;
}
