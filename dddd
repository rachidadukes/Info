
    // simple success/error heuristic
    bool looksError =
        ContainsIgnoreCase(response, "error") ||
        ContainsIgnoreCase(response, "fault") ||
        ContainsIgnoreCase(response, "exception");

    if (looksError)
        AnsiConsole.MarkupLine($"[red bold]Response:[/] [white]{Markup.Escape(response)}[/]");
    else
        AnsiConsole.MarkupLine($"[green bold]Response:[/] [white]{Markup.Escape(response)}[/]");
