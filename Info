public static string BuildCreditAddRqXml(NewCreditDebitRqModel selectedRequest)
{
    XNamespace ns = "http://schemas.navyfederal.org/2010/04/NFBranchExService";

    var msgRqHdr = new XElement(ns + "MsgRqHdr",
        new XElement(ns + "RqUID", selectedRequest.RqUID),
        new XElement(ns + "EnvironmentName", selectedRequest.EnvironmentName),
        new XElement(ns + "TranCode", selectedRequest.TranCode),
        new XElement(ns + "BranchId", selectedRequest.BranchId),
        new XElement(ns + "PCName", selectedRequest.PCName),
        new XElement(ns + "TranCodeQual", selectedRequest.TranCodeQual),
        new XElement(ns + "CashBoxId", selectedRequest.CashBoxId),
        new XElement(ns + "EmployeeId", selectedRequest.EmployeeId),
        new XElement(ns + "PostingDt", selectedRequest.PostingDt),
        new XElement(ns + "CalendarDt", selectedRequest.CalendarDt),
        new XElement(ns + "TranTime", selectedRequest.TranTime),
        new XElement(ns + "TranSeqNum", selectedRequest.TranSeqNum),
        new XElement(ns + "ForwardTranFlag", selectedRequest.ForwardTranFlag),
        new XElement(ns + "CustPermId", selectedRequest.CustPermId),
        new XElement(ns + "POAInd", selectedRequest.POAInd ?? string.Empty),
        new XElement(ns + "MultiTranFlag", selectedRequest.MultiTranFlag),
        new XElement(ns + "ConductorId", selectedRequest.ConductorId ?? string.Empty)
    );

    var creditInfo = new XElement(ns + "CreditInfo",
        new XElement(ns + "AcctKeys", selectedRequest.AcctKeys),
        new XElement(ns + "TransAmt", selectedRequest.TransAmt),
        new XElement(ns + "DepositType", selectedRequest.DepositType),
        new XElement(ns + "CashInAmt", selectedRequest.CashInAmt),
        new XElement(ns + "CashOutAmt", selectedRequest.CashOutAmt),
        new XElement(ns + "ScannedChkAmt", selectedRequest.ScannedChkAmt),
        new XElement(ns + "UnscannedChkAmt", selectedRequest.UnscannedChkAmt),
        new XElement(ns + "NumberOfChecks", selectedRequest.NumberOfChecks),
        new XElement(ns + "GLAcctNum", selectedRequest.GLAcctNum),
        new XElement(ns + "PayeeName", selectedRequest.PayeeName),
        new XElement(ns + "Reason", selectedRequest.Reason),
        new XElement(ns + "CurType", selectedRequest.CurType),
        new XElement(ns + "FFltLvl1", selectedRequest.FFltLvl1),
        new XElement(ns + "FFltLvl2", selectedRequest.FFltLvl2),
        new XElement(ns + "FFltLvl3", selectedRequest.FFltLvl3)
        // ChkData is omitted for now (it's maxOccurs=unbounded; let me know if you need it too)
    );

    var root = new XElement(ns + "CreditAddRq",
        new XAttribute(XNamespace.Xmlns + "nfb", ns),
        msgRqHdr,
        creditInfo
    );

    return root.ToString(SaveOptions.DisableFormatting);
}
