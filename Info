private void CopyDataFromTheOriginalToTheNew()
{
    try
    {
        newRequest = new NewCreditDebitRqModel
        {
            RqUID = selectedOriginalRequest.RqUID,
            EnvironmentName = selectedOriginalRequest.EnvironmentName,
            TranCode = selectedOriginalRequest.TranCode,
            BranchId = selectedOriginalRequest.BranchId,
            PCName = selectedOriginalRequest.PCName,
            TranCodeQual = selectedOriginalRequest.TranCodeQual,
            CashBoxId = selectedOriginalRequest.CashBoxId,
            EmployeeId = Environment.UserName, // custom
            PostingDt = selectedOriginalRequest.PostingDt,
            CalendarDt = selectedOriginalRequest.CalendarDt,
            TranTime = selectedOriginalRequest.TranTime,
            TranSeqNum = selectedOriginalRequest.TranSeqNum,
            ETSTranStatus = selectedOriginalRequest.ETSTranStatus,
            // ... and all the rest
        };
    }
    catch (Exception ex)
    {
        Console.WriteLine($"[ERROR] Failed to load newRequest: {ex.Message}");
    }
}
