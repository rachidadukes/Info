
  private async void MainWindowX_Loaded(object sender, RoutedEventArgs e)
  {
      Mouse.OverrideCursor = Cursors.Wait;

      try
      {
          var importInfo = new LogFilterService();
          string lastImportDates = await importInfo.LastImport();              
          lblTitle.Content = "Latest Import - " + lastImportDates;
      }
      catch (Exception ex)
      {
          MessageBox.Show($"Error logs: {ex.Message}");
          return;
      }
      finally
      {
          Mouse.OverrideCursor = null;

      }
    
  }


===========================

  <Label Name="lblTitle" Foreground="Red" FontWeight="Bold" FontSize="12"
         Content="Encore Host Logs WPF Application"></Label>
           
=========================
  public class LogFilterService
=================

public async Task<string> LastImport()
   {
       string strImportDate = string.Empty;

       try
       {

           var dbContext = _openDb.OpenDatabase();

           var maxUnitDate = await dbContext.LogAccounts
               .Where(e => e.Environment.Contains("UNIT"))
                .MaxAsync(e => e.DateTimeStamp);


           var maxIntgDate = await dbContext.LogAccounts
              .Where(e => e.Environment.Contains("INTG"))
               .MaxAsync(e => e.DateTimeStamp);

           strImportDate = "UNIT Max Date: " + maxUnitDate.ToString() +
                           "  |  INTGMax Date: " + maxIntgDate.ToString();
           return strImportDate;
       }
       catch (Exception ex)
       {
           Console.WriteLine($"Error counting data: {ex.Message}");
           return "";
       }
   }
