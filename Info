string rawXml = @"Input from client; len=373;<encore><customers><an>108</an><lastname>PASTWATCH</lastname></customers></encore>";

// Find first '<' character â€“ the beginning of the XML
int firstTagIndex = rawXml.IndexOf('<');

if (firstTagIndex != -1)
{
    string cleanXml = rawXml.Substring(firstTagIndex);
    Console.WriteLine(cleanXml); // This is now pure XML
}
else
{
    Console.WriteLine("No XML tag found in the input.");
}
