// 4) Ask user to enter the amount
AnsiConsole.Markup("[yellow]Enter the amount: [/]");
string transAmt = Console.ReadLine()?.Trim() ?? string.Empty;
userInput.TransAmt = transAmt;

// ðŸ‘‡ Print it back permanently once (same line)
AnsiConsole.MarkupLine($"[blue]Enter the amount:[/] [bold yellow]{userInput.TransAmt}[/]");
AnsiConsole.WriteLine();
