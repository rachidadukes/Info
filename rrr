using System;
using System.Collections.Specialized;
using System.Configuration;

namespace NewServiceApp
{
    public static class HostRoutingConfig
    {
        // These properties will directly read from App.config
        public static NameValueCollection GetHostRouting()
        {
            var routing = new NameValueCollection
            {
                { "RoutingFlag", ConfigurationManager.AppSettings["RoutingFlag"] },
                { "HostTranCodes", ConfigurationManager.AppSettings["HostTranCodes"] }
            };
            return routing;
        }

        public static NameValueCollection GetHostSettings()
        {
            var settings = new NameValueCollection
            {
                { "HostURL", ConfigurationManager.AppSettings["HostURL"] },
                { "HostMemberSearchURL", ConfigurationManager.AppSettings["HostMemberSearchURL"] },
                { "HostAcctInquiryURL", ConfigurationManager.AppSettings["HostAcctInquiryURL"] },
                { "HostCashBoxURL", ConfigurationManager.AppSettings["HostCashBoxURL"] },
                { "MessageConverterURL", ConfigurationManager.AppSettings["MessageConverterURL"] },
                { "ClientCert.SubjectName", ConfigurationManager.AppSettings["ClientCert.SubjectName"] },
                { "ClientCert.StoreLocation", ConfigurationManager.AppSettings["ClientCert.StoreLocation"] },
                { "ClientCert.StoreName", ConfigurationManager.AppSettings["ClientCert.StoreName"] }
            };
            return settings;
        }
    }
}
