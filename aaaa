catch (InvalidOperationException ex) when (ex.InnerException is System.Xml.XmlException xmlEx)
{
    Console.WriteLine("===== XML DESERIALIZATION ERROR =====");
    Console.WriteLine($"XmlException.Message : {xmlEx.Message}");
    Console.WriteLine($"Line                 : {xmlEx.LineNumber}");
    Console.WriteLine($"Position             : {xmlEx.LinePosition}");
    Console.WriteLine();
    Console.WriteLine("Offending XML:");
    Console.WriteLine(stringXmlAccountRequest); // whatever string youâ€™re deserializing

    // rethrow if you want:
    // throw;
}
