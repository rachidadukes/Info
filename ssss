public static ProbeLogger Start(string baseName = "probe")
{
    // ✅ Define fixed log directory
    var logDir = @"C:\Temp\CertProbeLogs";
    Directory.CreateDirectory(logDir); // auto-create folder if missing

    // ✅ Build unique filename with timestamp
    var logPath = Path.Combine(logDir, $"{baseName}_{DateTime.Now:yyyy-MM-dd_HH-mm-ss}.log");

    // ✅ Create and assign logger
    var logger = new ProbeLogger(baseName, logPath);
    Current = logger;

    // ✅ Show info on console for clarity
    AnsiConsole.MarkupLine($"[grey]Log file created: {logPath}[/]");

    // ✅ (optional) Auto-open in Notepad after app ends
    AppDomain.CurrentDomain.ProcessExit += (_, __) =>
    {
        try
        {
            System.Diagnostics.Process.Start("notepad.exe", logPath);
        }
        catch { /* ignore if Notepad unavailable */ }
    };

    return logger;
}
