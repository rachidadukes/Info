private static string SelectEnvirement()
{
    // Define the choices
    var promptItems = new List<string> { "UNIT", "INTG" };

    // Ask user to select
    var environment = AnsiConsole.Prompt(
        new SelectionPrompt<string>()
            .Title("Select one environment.")
            .AddChoices(promptItems));

    // Print confirmation to console
    AnsiConsole.MarkupLine($"You selected environment: [red]{environment}[/].");

    // Build system responses (optional)
    var systemResponses = new List<string>
    {
        $"Environment {environment} confirmed"
    };

    // Log everything in Summary
    AppLogger.Summary.Add(promptItems, environment, systemResponses);

    return environment;
}
