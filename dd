public void PrintSummary()
{
    AnsiConsole.MarkupLine("\n[green]=== Summary of Session ===[/]\n");

    foreach (var entry in Entries)
    {
        var table = new Table()
            .Border(TableBorder.Rounded)
            .AddColumn("[bold yellow]PromptItems[/]")
            .AddColumn("[bold cyan]UserSelection[/]")
            .AddColumn("[bold green]SystemResponses[/]");

        // Join items into one string per column
        var promptStr = string.Join("\n", entry.PromptItems);
        var responseStr = string.Join("\n", entry.SystemResponses);

        table.AddRow(promptStr, entry.UserSelection, responseStr);

        AnsiConsole.Write(table);
        AnsiConsole.WriteLine();
    }
}
