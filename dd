public void PrintSummary()
{
    AnsiConsole.MarkupLine("\n[green]=== Summary of Session ===[/]\n");

    foreach (var entry in Entries)
    {
        var outer = new Table()
            .Border(TableBorder.Rounded)
            .Expand()
            .AddColumn(new TableColumn($"[bold white]{entry.Title}[/]"));

        // Prompt Items
        outer.AddRow("[bold yellow]Prompt Items:[/]");
        outer.AddRow(BuildListGrid(entry.PromptItems, columns: 1, maxItemsToShow: 40, highlight: entry.UserSelection));

        // âœ… Only show User Selection if not null/empty
        if (!string.IsNullOrWhiteSpace(entry.UserSelection))
        {
            outer.AddEmptyRow();
            outer.AddRow($"[bold cyan]User Selection:[/] {Markup.Escape(entry.UserSelection)}");
        }

        AnsiConsole.Write(outer);
        AnsiConsole.WriteLine();
    }
}
