 // Thin facade: no HttpClient here, no try/catch that swallows errors.
    public class sMemberSearchXmlResponse : IsMemberSearchXmlResponse
    {
        public Task<string> ReadXmlResponseAsync(string soapXml, string endpoint, string? soapAction = null)
            => SoapPoster.PostAsync(endpoint, soapXml, soapAction);

        // Keep your existing implementation if you actually use this.
        public Task<string> GenerateCleanXmlResponseAsync(string originalXmlResponse)
            => Task.FromResult(originalXmlResponse);
    }
