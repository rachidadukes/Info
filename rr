// If nothing came back, stop here
if (logs == null || logs.Count == 0)
{
    AnsiConsole.MarkupLine("[yellow]No logs found for this user and date range.[/]");
    return;
}

// Let the user select ONE log from the list
EventDetailsModel selectedLog = AnsiConsole.Prompt(
    new SelectionPrompt<EventDetailsModel>()
        .Title("[bold]Select a log entry[/]")
        .PageSize(10)
        .MoreChoicesText("[grey](Use ↑/↓ to move, Enter to select)[/]")
        .UseConverter(log =>
            $"{log.EventID,6} | {log.DateTimeStamp:yyyy-MM-dd HH:mm:ss} | {Truncate(log.EventDesc, 60)}")
        .AddChoices(logs));

// Now use selectedLog as you already planned
RequestResponseModel selectedRequestResponse =
    ExtractRequestsResponses.RequestResponsesFromSelectedLog(selectedLog);

string? xmlRequest  = selectedRequestResponse.Request;
string? xmlResponse = selectedRequestResponse.Response;

// ... your existing code to display / pretty-print xmlRequest & xmlResponse




==================

private static string Truncate(string? value, int maxLength)
{
    if (string.IsNullOrEmpty(value))
        return string.Empty;

    return value.Length <= maxLength
        ? value
        : value.Substring(0, maxLength - 3) + "...";
}
