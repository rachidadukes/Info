public class EventDetails
{
    public int EventID { get; set; }               // EventID (PK, int, not null)

    public string DBID { get; set; } = string.Empty; // DBID (varchar(50), not null)

    public string? EventDesc { get; set; }         // EventDesc (varchar(max), null)

    public string EventSource { get; set; } = string.Empty; // EventSource (varchar(1000), not null)

    public DateTime DateTimeStamp { get; set; }    // DateTimeStamp (datetime, not null)

    public bool Deleted { get; set; }              // Deleted (bit, not null)

    public string? UserID { get; set; }            // UserID (varchar(50), null)
}
