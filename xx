  // ðŸ‘‰ REQUEST XML
        string requestXml = XmlHelpers.SerializeToXml(inqRq);
        Console.WriteLine("===== REQUEST XML =====");
        Console.WriteLine(requestXml);

        // Call WCF
        var response = await _client.verifyAcctNumberAsync(inqRq);

        // If the WCF call returns the actual response type:
        // var respObj = response;  // or response.verifyAcctNumberResult, depends on proxy

        // ðŸ‘‰ RESPONSE XML
        string responseXml = XmlHelpers.SerializeToXml(response);
        Console.WriteLine("===== RESPONSE XML =====");
        Console.WriteLine(responseXml);

