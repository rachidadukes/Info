static async Task Main()
{
    HostRoutingConfig.Load();

    string selectedTask = SelectTask();
    AnsiConsole.MarkupLine("[green bold]Configuration loaded successfully.[/]");

    await ExecuteSelectedTask(selectedTask);
}

private static async Task ExecuteSelectedTask(string task)
{
    switch (task)
    {
        case "Check API Health":
            await CheckApiHealth();
            break;
        case "Check Certificate Health":
            await CheckCertificateHealth();
            break;
        case "Call API":
            await CallApi();
            break;
        default:
            Console.WriteLine("Invalid selection");
            break;
    }
}
