using ApiClientLib;

namespace RestServiceApp
{
    public class CallApiXmlClient
    {
        public static async Task<int> CallApi()
        {
            var request = RequestBuilder.BuildXmlRequest();

            // Create options for the API client
            var options = new ApiClientOptions
            {
                MessageConverterUrl = "https://your-api-endpoint.com/MessageConverter",
                IgnoreServerCertificateErrors = true // or false based on your environment
            };

            // Instantiate the client from your library
            var client = new ApiXmlClient(options);

            // Send the XML request
            string response = await client.SendAsync(request);

            Console.WriteLine(response);
            return 0;
        }
    }
}
