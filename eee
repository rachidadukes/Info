dotnet add package Microsoft.Extensions.Configuration
dotnet add package Microsoft.Extensions.Configuration.Json

===========================

using System;
using System.Threading.Tasks;
using Microsoft.Extensions.Configuration;
using FinancialInquiryService;   // your connected service namespace

internal class Program
{
    static async Task Main(string[] args)
    {
        // 1) Load config
        var configuration = new ConfigurationBuilder()
            .SetBasePath(AppContext.BaseDirectory)
            .AddJsonFile("appsettings.json", optional: false, reloadOnChange: false)
            .Build();

        var hostSettings = configuration
            .GetSection("HostSettings")
            .Get<HostSettings>();

        // For this first test we’ll use the account inquiry URL:
        var serviceUrl = hostSettings.HostAcctInquiryURL;

        await TestAccountInquiryAsync(serviceUrl);

        Console.WriteLine("Done. Press any key to exit.");
        Console.ReadKey();
    }


=====================


    private static async Task TestAccountInquiryAsync(string serviceUrl)
    {
        // Binding: match what the legacy app uses.
        // Start with BasicHttpsBinding (HTTPS + SOAP 1.1) – adjust later if needed.
        var binding = new System.ServiceModel.BasicHttpsBinding(
            System.ServiceModel.BasicHttpsSecurityMode.Transport);

        // (Optional) tune limits
        binding.MaxReceivedMessageSize = 1024 * 1024; // 1 MB, change if needed

        var endpoint = new System.ServiceModel.EndpointAddress(serviceUrl);

        var client = new FinancialInquiryWsClient(binding, endpoint);

        // If the service requires credentials, set them here
        // client.ClientCredentials.UserName.UserName = "user";
        // client.ClientCredentials.UserName.Password = "pwd";

        // Now build ONE request
        await CallStAccountInquiryAsync(client);
    }



