
    // Text shown in the console menu
    public static string GetDisplayName(this TransactionFilter filter) => filter switch
    {
        TransactionFilter.CreditAddRq => "Credit Add Request",
        TransactionFilter.DebitAddRq  => "Debit Add Request",
        TransactionFilter.All         => "All Transaction Types",
        _ => filter.ToString()
    };
============================

var trxFilter = AnsiConsole.Prompt(
    new SelectionPrompt<TransactionFilter>()
        .Title("Select [green]transaction type[/]:")
        .UseConverter(f => f.GetDisplayName())
        .AddChoices(Enum.GetValues<TransactionFilter>()));
